<?xml version="1.0" encoding="UTF-8"?>
<project name="SuperTMXMerge" default="default" basedir=".">
    <description>Builds, tests, and runs the project SuperTMXMerge.</description>
    <import file="nbproject/build-impl.xml"/>
    <target name="-post-jar">
        <copy todir="dist">
            <fileset dir="release" includes="*"/>
        </copy>
        <copy file="README.md" tofile="dist/README.TXT" overwrite="yes"/>
    </target>
    <target name="gen">
        <exec executable="xjc">
            <arg line="-d src"/>
            <arg line="-p gen.core.tmx14"/>
            <arg line="-b src/schemas/tmx14.xjb"/>
            <arg value="src/schemas/tmx14.xsd"/>
        </exec>
    </target>
</project>
